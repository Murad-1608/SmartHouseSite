@{
    ViewData["Title"] = "Email yenilə";
}
@model WebUI.Areas.Admin.Models.ChangeEmailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="card-body">
    <h3>Email yeniləmək</h3>
    <br />
    @if (TempData["SuccessedMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessedMessage"]
        </div>
    }

    <form class="forms-sample" asp-controller="user" asp-action="changeemail" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleInputName1">Email</label>
            <input type="text" asp-for="Email" class="form-control" id="exampleInputName1" placeholder="" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <br />
            <label for="exampleInputName1">Parol</label>
            <input type="text" asp-for="Password" class="form-control" id="exampleInputName1" placeholder="">
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />
            <button type="submit" class="btn btn-info">Yenilə</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
