@{
    ViewData["Title"] = "Yeni məhsul";
}
@model WebUI.Areas.Admin.ViewModels.ProductViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="card-body">
    <h3>Yeni məhsul əlavə et</h3>
    <br />
    <form class="forms-sample" asp-controller="product" asp-action="add" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleInputName1">Ad</label>
            <input type="text" asp-for="ProductModel.Name" class="form-control" id="exampleInputName1" placeholder="">
            <span asp-validation-for="ProductModel.Name" class="text-danger"></span>
            <br />
            <label for="exampleInputName2">Açıqlama</label>
            <textarea type="text" asp-for="ProductModel.Description" class="form-control" id="exampleInputName2" placeholder=""></textarea>
            @*<span asp-validation-for="ProductModel.Description" class="text-danger"></span>*@
            <br />
            <label for="validationCustom03">Kateqoriya</label>
            @Html.DropDownListFor(x => x.ProductModel.CategoryId, new SelectList(Model.Categories, "Value", "Text"), new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ProductModel.CategoryId, "", new { @class = "text-danger" })
            <br />
            <label for="exampleInputName2">Əsas şəkil</label>
            <input type="file" asp-for="ProductModel.BasePhoto" class="form-control" id="exampleInputName2" placeholder="">
            <span asp-validation-for="ProductModel.BasePhoto" class="text-danger"></span>
            <br />
            <label for="exampleInputName2">Digər şəkillər</label>
            <input type="file" asp-for="ProductModel.PhotoUrls" class="form-control" id="exampleInputName2" placeholder="" multiple>
            <br />
            <button type="submit" class="btn btn-info">Təstiqlə</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
