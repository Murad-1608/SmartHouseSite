@{
    ViewData["Title"] = "Haqqımızda";
}
@model Entity.Concrete.AboutUs
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .aboutContainer {
        margin-top: 120px;
        width: 1170px;
        /*margin: 40px 280px;*/
        margin-left: auto;
        margin-right: auto;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 10px;
    }

    .aboutText {
        width: 600px;
    }

        .aboutText h1 {
            margin: 20px 0;
            font-family: Poppins;
            color: #FFFFFF;
        }

        .aboutText p {
            margin: 0 0 20px;
            font-family: Poppins;
            font-size: 14px;
            font-weight: 400;
            word-spacing: 5px;
            letter-spacing: 1px;
            color: #FFFFFF;
            line-height: 1.8;
        }

    .aboutImage {
        width: 558px;
        height: 558px;
    }

        .aboutImage img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
        }

        .aboutImage iframe {
            width: 100%;
            height: 100%;
            /*border-radius: 50%;*/
            object-fit: cover;
        }

    @@media only screen and (max-width: 768px) {
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .aboutContainer {
            padding: 0 15px;
            width: 100%;
            margin: 40px 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
        }

        .aboutText {
            max-width: 600px;
            width: 100%;
        }

            .aboutText h1 {
                color: #FFFFFF;
                margin: 20px 0;
                font-family: 'Courier New', Courier, monospace;
            }

            .aboutText p {
                margin: 0 0 20px;
                font-family: Arial, Helvetica, sans-serif;
                font-size: 14px;
                font-weight: 400;
                word-spacing: 5px;
                letter-spacing: 1px;
                color: #FFFFFF;
                line-height: 1.8;
            }

        .aboutImage {
            max-width: 333px;
            width: 100%;
            height: auto;
        }

            .aboutImage img {
                width: 100%;
                height: auto;
                border-radius: 50%;
                object-fit: cover;
            }

            .aboutImage iframe {
                width: 100%;
                height: auto;
                /*border-radius: 50%;*/
                object-fit: cover;
            }
    }

    @@media only screen and (max-width: 724px) {
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .aboutText {
            width: 100%;
            margin: 0;
        }

        .aboutContainer {
            margin: 80px 10px;
            margin-left: 0;
            margin-bottom: 40px;
            padding: 0 10px;
        }

        .aboutImage img {
            width: 333px;
            height: 333px;
        }

        .aboutImage iframe {
            width: 333px;
            height: 333px;
        }
    }

    @@media only screen and (min-width: 769px) and (max-width: 1024px) {
        .aboutText {
            width: 541px;
        }

        .aboutContainer {
            max-width: 1024px;
            margin: 80px 10px;
            margin-left: 0;
            margin-bottom: 40px;
            display: flex;
            align-items: center;
        }

        .aboutImage img {
            width: 333px;
            height: 333px;
        }
        .aboutImage iframe {
            width: 333px;
            height: 333px;
        }
    }
</style>

<body>
    <div class="aboutContainer">

        <div class="aboutText">
            <h1>Haqqımızda</h1>
            <p style="white-space: pre-line">
               @Model.Text
            </p>

        </div>
        <div class="aboutImage">
            <iframe width="560" height="315" src="@Model.YoutubeLink" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            @*<img src="~/AboutUs/about/img/smartHomeAbout.jpg" alt="smart-home" title="smart-home">*@
        </div>
    </div>
</body>