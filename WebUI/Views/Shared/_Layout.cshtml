    <style>

        .row-smedia-fixed {
            position: absolute;
            bottom: 0;
            left: 0;
        }

        .row-smedia {
            display: flex;
            justify-content: center;
            align-items: center;
            /* flex-wrap: wrap; */
            flex-direction: column;
            margin: 0 -8px;
        }

            .row-smedia li {
                display: inline-block;
                margin: 0px 8px 30px 8px;
            }

            .row-smedia svg {
                transition: transform 0.3s ease;
                color: #FFFFFF;
            }

                .row-smedia svg:hover {
                    transform: scale(1.1);
                }

        /* Logo styles */
        .logo img {
            max-width: 96px;
            height: auto;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 10px;
        }

        /* Column styles for social media links */
        .column-smedia {
            text-align: center;
            padding: 0 8px;
        }

            .column-smedia a {
                color: white;
                display: block;
                font-size: 2.4rem;
                text-decoration: none;
                border: 1px white solid;
                margin-bottom: 16px;
                padding: 16px 44px;
                border-radius: 45px;
                transition: all 0.3s linear;
            }

                .column-smedia a:hover {
                    color: black;
                    background-color: white;
                }

        /* Media query for mobile screens */
        @@media (max-width: 767px) {
            .container {
                padding: 10px;
            }

            .title {
                font-size: 2rem;
            }

            .row-smedia li {
                margin: 0px 8px 5px 8px;
            }

            .row-smedia svg {
                transition: transform 0.3s ease;
                color: #FFFFFF;
                width: 25px;
                height: 25px;
            }


            .logo img {
                max-width: 64px;
            }

            .column-smedia {
                width: 100%;
                padding: 0 16px;
            }

                .column-smedia a {
                    font-size: 1.8rem;
                    margin-bottom: 12px;
                    padding: 12px 36px;
                }
        }

        /* Footer Css */

        .footer-section {
            background: #151414;
            position: relative;
        }

        .footer-cta {
            border-bottom: 1px solid #373636;
        }

        .single-cta i {
            color: #ff5e14;
            font-size: 30px;
            float: left;
            margin-top: 8px;
        }

        .cta-text {
            padding-left: 15px;
            display: inline-block;
        }

            .cta-text h4 {
                color: #fff;
                font-size: 20px;
                font-weight: 600;
                margin-bottom: 2px;
            }

            .cta-text span {
                color: #757575;
                font-size: 15px;
            }

        .footer-content {
            position: relative;
            z-index: 2;
        }

        .footer-pattern img {
            position: absolute;
            top: 0;
            left: 0;
            height: 330px;
            background-size: cover;
            background-position: 100% 100%;
        }

        .footer-logo {
            margin-bottom: 30px;
        }

            .footer-logo img {
                max-width: 200px;
            }

        .footer-text p {
            margin-bottom: 14px;
            font-size: 14px;
            color: #7e7e7e;
            line-height: 28px;
            text-align: start;
        }

        .footer-social-icon span {
            color: #fff;
            display: block;
            font-size: 20px;
            font-weight: 700;
            font-family: 'Poppins', sans-serif;
            margin-bottom: 20px;
        }
        /* .footer-social-icon a {
          color: #fff;
