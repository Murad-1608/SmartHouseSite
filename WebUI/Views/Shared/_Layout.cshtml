    <style>
        
        .news-ticker {
            overflow: hidden;
            white-space: nowrap;
        }

        #ticker-list {
            list-style-type: none;
            padding: 0;
            margin: 0;
            display: inline-block;
            animation: ticker-animation 5s linear infinite; /* Adjust the duration as needed */
        }

        @@keyframes ticker-animation {
            100% {
                transform: translateX(500%);
            }

            0% {
                transform: translateX(-100%);
            }
        }

        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        li {
            display: inline-block;
            margin: 0 15px;
            position: relative;
        }

        a {
            color: white;
            text-decoration: none;
        }

        .submenu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #333;
            padding: 10px;
        }

        li:hover .submenu {
            display: block;
        }

