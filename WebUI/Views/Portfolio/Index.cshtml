@model List<Entity.Concrete.Portfolio>

@{
    ViewData["Title"] = "Görülən işlər";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .images {
        max-width: 1200px;
        padding: 0 15px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 60px;
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

        .images .image {
            width: 277.5px;
            height: 277.5px;
            position: relative;
            cursor: pointer;
        }

    .image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.7);
        color: #fff;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
    }

    .image:hover .overlay {
        opacity: 1;
        color: aliceblue;
    }

    .overlay h3 {
        margin: 0;
        color: aliceblue;
    }

    .buttonn {
        margin-top: 50px;
        margin-bottom: 50px;
        margin-left: auto;
        margin-right: auto;
        /* text-align: center; */
    }

        .buttonn .btn {
            padding: 10px 56px;
            border: none;
            background-color: #40a7d3;
            font-size: 14px;
            font-family: Arial, Helvetica, sans-serif;
            color: #fff;
            text-transform: uppercase;
            cursor: pointer;
        }

            .buttonn .btn:hover {
                background-color: #222222;
                color: aliceblue;
            }

    @@media screen and (max-width: 768px) {
        .images .image {
            width: 382px;
            height: 382px;
        }

        .images {
            display: flex;
            flex-direction: row;
        }

        .gorulen-title {
            text-align: center;
            font-size: 24px;
            color: white;
            margin-top: 150px;
        }
    }
</style>

@*<link rel="stylesheet" href="~/Portfilio/style.css" />*@

<body>
    <h2 class="gorulen-title" style="margin-top:150px; color:white; text-align:center">Görülən işlər</h2>
    <div class="images" style="margin-top:100px;">

        @foreach (var item in Model)
        {
            <a asp-controller="portfolio" asp-action="detail" asp-route-id="@item.Id">
                <div class="image">
                    <img src="~/Images/Portfolio/@item.PhotoUrl" alt="Image" />
                    <div class="overlay">
                        <h3>@item.Name</h3>
                    </div>
                </div>
            </a>
        }
    </div>

</body>
