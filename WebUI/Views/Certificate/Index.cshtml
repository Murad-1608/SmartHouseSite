@{
    ViewData["Title"] = "Sertifikatlar";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background-color: #071e22;
    }

    .sert-container {
        margin-top: 60px;
        margin-bottom: 30px;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        padding: 0 15px;
        width: 100%;
    }
    .images{
        margin-top:50px;
    }

    .image1,
    .image2 {
        width: 100%;
        max-width: 600px;
        height: auto;
        padding: 0 15px;
        cursor: pointer;
        transition: transform 0.3s ease-in-out;
    }

        .image1:hover,
        .image2:hover {
            transform: scale(1.1);
        }

        .image1 img,
        .image2 img {
            width: 100%;
            height: 100%;
        }

    .images {
        display: flex;
        /*flex-wrap: column;*/
    }

    .title {
        color: #ffff;
        text-align: center;
        font-family: "Montserrat", sans-serif;
        margin-top: 130px;
        font-size: 24px;
        text-transform: uppercase;
    }

    @@media screen and (max-width: 768px) {
        .image1,
        .image2 {
            width: 100%;
            max-width: none;
            padding: 0;
            margin-bottom: 15px;
        }

        .images {
            display: flex;
            flex-wrap: wrap;
        }
    }
</style>

<title>Sertifikatlar</title>
<link rel="stylesheet" href="~/Certificate/style.css" />
<body>
    
    <div class="sert-container">
        <h1 class="title" style="margin-top:130px;">Sertifikatlar</h1>
        <div class="images">
            <div class="image1">
                <img src="~/Certificate/Uyğunluq-Sertifikatı-1.jpg"
                     alt="sertfifikat1"
                     onclick="zoomImage(this)" />
            </div>
            <div class="image2">
                <img src="~/Certificate/Uyğunluq-sertifikatı-2.jpg"
                     alt="sertifikat2"
                     onclick="zoomImage(this)" />
            </div>
        </div>
    </div>
</body>
